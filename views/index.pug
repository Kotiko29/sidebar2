extends layout

block content
    main
        div.sidebar= text
        article= text
            div(class = "num")= page
     
    div.nuvig
        if page > 1
            a( href="/?page=" + (page - 1) ) <
        if page === 1 || page === 2 || page > 5
            a( href="/?page=1") 1,
            a( href="/?page=2") 2,
            a( href="/?page=3") 3,
        else
            - for(var i = 1; i<=(page+1); i++)
                a( href="/?page="+i) #{i},
        if page > 5
            |...
            a( href="/?page="+(page-1) ) #{page-1},
            a( href="/?page="+page) #{page},
            a( href="/?page="+(page+1) ) #{page+1},
        |...
        a( href="/?page="+(page+1) ) >